<h2><%= @list.name %></h2>
<ul>
<% @bookmarks.each do |b| %>
  <li><h5><%= b.movie.title %> - <%= b.movie.rating %></h5>
          <%= b.comment %></li> 

<li><%= link_to "delete",
                bookmark_path(b),
                method: :delete,
                data: { confirm: "Are you sure?" }, class:"btn btn-danger"%>
</li>
<% end %>
</ul>

<%= link_to "Go Back", lists_path, class:" btn btn-primary" %>

<%= link_to "Add a Movie", new_list_bookmark_path(@list), class:"btn btn-primary" %>
